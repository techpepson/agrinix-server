generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @unique @default(autoincrement())
  name            String
  email           String   @unique
  password        String
  profilePicture  String?
  isEmailVerified Boolean? @default(false)
  emailToken      String?
}

model Crop {
  id Int @id @unique @default(autoincrement())
}

model Disease {
  id Int @id @unique @default(autoincrement())
}

model Image {
  id Int @id @unique @default(autoincrement())
}

model Message {
  id Int @id @unique @default(autoincrement())
}

model Response {
  id Int @id @unique @default(autoincrement())
}

model Notification {
  id Int @id @unique @default(autoincrement())
}

model Logs {
  id Int @id @unique @default(autoincrement())
}
